        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0">All Applications</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">{{title}}</a></li>
                                        <li class="breadcrumb-item active">Applications</li>
                                    </ol>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title mb-0">Application to Revisit</h4>
                                </div><!-- end card header -->

                                <div class="card-body">
                                    <div id="customerList">
                                        <div class="row g-4 mb-3">
                                            <div class="col-sm-auto">
                                            </div>
                                            <div class="col-sm">
                                                <div class="d-flex justify-content-sm-end">
                                                    <a href="#" class="color: white;"><button type="button" class="btn btn-info add-btn" data-bs-toggle="modal" id="create-btn" data-bs-target="#showModal"><i class="ri-download-2-fill align-bottom me-1"></i> Download CSV</button></a>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="table-responsive table-card mt-3 mb-1">
                                            <table class="table align-middle table-nowrap" id="customerTable">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th scope="col" style="width: 50px;">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="checkAll" value="option">
                                                            </div>
                                                        </th>
                                                        <th class="sort" data-sort="customer_name">Name</th>
                                                        <th class="sort" data-sort="email">Email</th>
                                                        <th class="sort" data-sort="phone">Phone</th>
                                                        <th class="sort" data-sort="date">Date Submitted</th>
                                                        <th class="sort" data-sort="cv">CV</th>
                                                        <th class="sort" data-sort="letter">Cover Letter</th>
                                                        <th class="sort" data-sort="status">Status</th>
                                                        <th class="sort" data-sort="action">Action</th>
                                                    </tr>
                                                </thead>
                                                {{#each applications}}
                                                <tbody class="list form-check-all">
                                                    <tr>
                                                        <th scope="row">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="chk_child3" value="option1">
                                                            </div>
                                                        </th>
                                                        <td class="id" style="display:none;"><a href="javascript:void(0);" class="fw-medium link-primary">{{id}}</a></td>
                                                        <td class="customer_name">{{first_name}} {{last_name}}</td>
                                                        <td class="email">{{email}}</td>
                                                        <td class="phone">{{tel}}</td>
                                                        <td class="date dateString">{{time_submited}}</td>
                                                        <td class="cv"><a href="{{cv}}" target="_blank">View CV</a></td>
                                                        <td class="letter"><a href="{{cover}}" target="_blank">View Letter</a></td>
                                                        <td class="status"><span class="badge badge-soft-warning text-uppercase">{{status}}</span></td>
                                                        <td>
                                                            <div class="d-flex gap-2">
                                                                <form action="/admin/applications/shortlist/{{id}}?newMethod=PUT" method="post">
                                                                    <div class="edit">
                                                                        <button class="btn btn-sm btn-success edit-item-btn sux"  type="submit">S</button>
                                                                    </div>
                                                                </form>
                                                                <form action="/admin/applications/decline/{{id}}?newMethod=PUT" method="post">
                                                                <div class="remove">
                                                                    <button class="btn btn-sm btn-danger remove-item-btn nah" >F</button>
                                                                </div>
                                                                </form>
                                                                <p class="posi{{id}}" style="display:none;">{{position_id}}</p>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                                {{/each}}
                                            </table>
                                            <div class="noresult" style="display: none">
                                                <div class="text-center">
                                                    <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#121331,secondary:#08a88a" style="width:75px;height:75px"></lord-icon>
                                                    <h5 class="mt-2">Sorry! No Result Found</h5>
                                                    <p class="text-muted mb-0">We've searched more than 150+ Orders We did not find any orders for you search.</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-end">
                                            <div class="pagination-wrap hstack gap-2">
                                                <a class="page-item pagination-prev disabled" href="#">
                                                    Previous
                                                </a>
                                                <ul class="pagination listjs-pagination mb-0"></ul>
                                                <a class="page-item pagination-next" href="#">
                                                    Next
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- end card -->
                            </div>
                            <!-- end col -->
                        </div>
                        <!-- end col -->
                    </div>
                    <!-- end row -->

                </div>
                <!-- container-fluid -->
            </div>
            <!-- End Page-content -->

            <script>
         
    const dateString = document.getElementsByClassName('dateString');

    $.each(dateString, function(index, value){
        var datte = value.innerHTML;
        var d = new Date(datte)
        var cleanedDate = d.toLocaleString();
        value.innerHTML= cleanedDate;

    })
</script>